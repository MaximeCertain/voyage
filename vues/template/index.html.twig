<script>

    $("#listenSliderTemperature").on("change", function () {
        var temp = $('#listenSliderTemperature').val();
        var tempMin, tempMax;
        if (temp.indexOf(',') > -1) {
            tempMin = (temp.substring(0, temp.indexOf(",")));
            tempMax = temp.split(',')[1];
        } else {
            tempMin = (temp.substring(0, temp.indexOf("/")));
            tempMax = temp.split('/')[1];
        }
        $('.minTemp').html(tempMin + " °");
        $('.maxTemp').html(tempMax+ " °");
    });
    $("#listenSliderDuree").on("change", function () {
        var duree = $('#listenSliderDuree').val();
        var dureeMin, dureeMax;
        if (duree.indexOf(',') > -1) {
            dureeMin = (duree.substring(0, duree.indexOf(",")));
            dureeMax = duree.split(',')[1];
        } else {
            dureeMin = (duree.substring(0, duree.indexOf("/")));
            dureeMax = duree.split('/')[1];
        }
        $('.minDuree').html(dureeMin+" jours");
        $('.maxDuree').html(dureeMax + " jours");
    });
    $("#listenSliderBudget").on("change", function () {
        var budget = $('#listenSliderBudget').val();
        var budgetMin, budgetMax;
        if (budget.indexOf(',') > -1) {
            budgetMin = (budget.substring(0, budget.indexOf(",")));
            budgetMax = budget.split(',')[1];
        } else {
            budgetMin = (budget.substring(0, budget.indexOf("/")));
            budgetMax = budget.split('/')[1];
        }

        $('.minBudget').html(budgetMin + " €");
        $('.maxBudget').html(budgetMax)+ " €";
    });

    var p = document.getElementById("searchResults");
    //récuperer temps min max etc
    p.onclick = function () {
        var temp = $('#listenSliderTemperature').val();
        var budget = $('#listenSliderBudget').val();
        var duree = $('#listenSliderDuree').val();
        var tempMin, tempMax, budgetMin, budgetMax, dureeMin, dureeMax;
        if (temp.indexOf(',') > -1) {
            tempMin = (temp.substring(0, temp.indexOf(",")));
            tempMax = temp.split(',')[1];
        } else {
            tempMin = (temp.substring(0, temp.indexOf("/")));
            tempMax = temp.split('/')[1];
        }
        if (budget.indexOf(',') > -1) {
            budgetMin = (budget.substring(0, budget.indexOf(",")));
            budgetMax = budget.split(',')[1];
        } else {
            budgetMin = (budget.substring(0, budget.indexOf("/")));
            budgetMax = budget.split('/')[1];
        }
        if (duree.indexOf(',') > -1) {
            dureeMin = (duree.substring(0, duree.indexOf(",")));
            dureeMax = duree.split(',')[1];
        } else {
            dureeMin = (duree.substring(0, duree.indexOf("/")));
            dureeMax = duree.split('/')[1];
        }

        var type = $('#type').val();
        var mois = $('#mois').val();

        $.ajax({
            url: 'index.php?uc=home&action=showCities',
            type: 'POST',
            dataType: 'text',
            data: {
                temperatureMin: parseInt(tempMin), //You'll get it with $_POST['head']
                temperatureMax: parseInt(tempMax), //You'll get it with $_POST['body']
                dureeMin: dureeMin,
                dureeMax: dureeMax,
                budgetMin: budgetMin,
                budgetMax: budgetMax,
                type: type,
                mois: mois
            },
        })
            .done(function (data) {
                $('#affichageVilles').html(data);
                // Do what you want in case of success
            })
            .fail(function (err) {
                alert("fail");
                //Do what you want incase of error
            });
    };
