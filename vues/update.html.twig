{% if ville is defined and ville != null %}
 <h1>Modifier la ville de {{ ville.villeNom }}</h1>

    <form id="contact-form" method="POST" action="index.php?uc=authentification&action=submitUpdateCity&villeId={{ ville.villeId }}">

